# Build the docker image with `npx nx docker-build server1`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t server1`.
FROM docker.io/node:20-alpine

ENV HOST=0.0.0.0
ENV PORT=4004

WORKDIR /app

RUN addgroup --system server1 && \
          adduser --system -G server1 server1

COPY dist/apps/server1 server1/
RUN chown -R server1:server1 .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix server1 --omit=dev -f install

CMD [ "node", "server1","main.js" ]
